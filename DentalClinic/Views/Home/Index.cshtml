@using DentalClinic.Models;
@using DentalClinic.Providers;
@{
    List<News> lsNews = (List<News>)ViewBag.ListNews;
    List<Doctor> lsDoctor = (List<Doctor>)ViewBag.ListDoctor;
    List<ServiceDental> lsService = (List<ServiceDental>)ViewBag.ListService;
    List<CustomerFeedback> lsCustomerFeedback = (List<CustomerFeedback>)ViewBag.ListCustomerFeedback;
    List<ServiceCategoryUpdate> lsServiceCategoryUpdate = (List<ServiceCategoryUpdate>)ViewBag.ListServiceCategoryUpdate;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="/Content/slick/slick.css" rel="stylesheet" />
    <link href="/Content/slick/slick-theme.css" rel="stylesheet" />
    <style>
    </style>
}

@section Slider{
    <section class="wrd-home-slider-area">
        <div class="wrd-home-slider-wrapper">
            <div class="wrd-single-slide-item wrd-cover-bg" data-background="/Content/assets/images/slider/home-1-slider-1.jpg">
                <div class="container">
                    <div class="row">
                        <div class="wrd-slider-content-column col-xl-6 col-lg-8 col-md-11">
                            <div class="wrd-slider-content-wrapper">
                                <div class="wrd-slider-content">

                                    <div class="slider-bg-text wrd-secondary-font" data-animation="fadeInUp" data-delay=".5s">Medical</div>

                                    <div class="slide-subtitle wrd-secondary-font" data-animation="fadeInUp" data-delay=".5s">
                                        Welcome to Health Care
