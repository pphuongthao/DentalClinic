@section styles{
    <style>
        .form-add-customer {
            margin: auto;
            width: 600px;
        }

        #form-add .info-detail .form-custom {
            margin-bottom: 10px;
            display: flex;
            justify-content: center;
            gap: 20px;
            padding-top: 10px;
        }

            #form-add .info-detail .form-custom .label-custom {
                display: flex;
                min-width: 170px;
